<!DOCTYPE html>
<html>
<head>
  <title>Hacker News</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
  <nav class="navbar navbar-inverse fixed navbar-custom" role="navigation">
    <div class="container">
      <ul class="nav navbar-nav title">
          <li class="active"><a href="/">Hacker News</a></li>
          <% if current_user %>
              <li><%= link_to "Log out", logout_path %></li>
              <li><%= link_to "Add a Link", new_link_path %></li>
              <li><%= link_to "Comments", comments_path %></li>
              <li><a>Logged in as <%= current_user.email %></a></li>
          <% else %>
            <li><%= link_to "Sign Up", signup_path %></li>
            <li><%= link_to "Log In", login_path %></li>
          <% end %>
      </ul>
    </div>
  </nav>
<body>
  <div class="container">
    <%= flash[:notice] %>
    <%= yield %>
  </div>
  <%= debug(params) %>
</body>
</html>
